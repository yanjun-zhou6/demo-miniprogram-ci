/*添加按钮*/
.add-button {
    position: fixed;
    top: 90%;
    left: 600rpx;
    height: 100rpx;
    width: 100rpx;
}
.container {
    display: flex;
    flex-direction: column;
    /*background-color: black;*/
    /*opacity: 0.1;*/
}
/*蒙层*/
.cover {
    height: 3000rpx;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background-color: #000000;
    opacity: 0.5;
    

}
.modal {
    height: 750rpx;
    width: 750rpx;
    position: fixed;
    top: 10%;
    left: 0;
    z-index: 100;
    /*background-color: black;*/
    /*padding: 20rpx;*/
}
.modal .create-box {
    margin: 20rpx;
    padding: 80rpx;
    /*background-color: #29DDB9;*/
    background-color: #FFFFFF;
    /*border: 4rpx solid #29DDB9;*/
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;

}

.create-box .close-button {
    height:60rpx;
    width:60rpx;
    margin-top:-60rpx;
    margin-right:-60rpx;
    align-self: flex-end;
}

.modal .create-box .emoji-select-box {
    width: 100%;
    height: 200rpx;
    background-color: #FFFFFF;
    border-radius: 10rpx;
    margin-top: 40rpx;
}

.emoji-picker {
    width: 100%;
    height: 100%;
}

.modal .create-box .emoji-image {
    width: 200rpx;
    height: 200rpx;
    margin-top: -200rpx;
}

.modal .create-box .text {
    width:100%;
    height:200rpx;
    display:block;
    position:relative;
    margin-top:80rpx;
    background-color:#FDFDFD;
    padding: 20rpx;
}

.modal .create-box .button-box {
    width: 100%;
    margin-top: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.button-box .submit-button {
    background-color: #29DDB9;
    width: 100rpx;
    padding: 20rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 10rpx;
}

.button-box .delete-button {
    background-color: #9B9B9B;
    width: 100rpx;
    padding: 20rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 10rpx;
}

.button-box .cancle-button {
    background-color: #FBFBFB;
    width: 100rpx;
    padding: 20rpx;
    color: #000000;
    text-align: center;
    border-radius: 10rpx;
}
.title {
    height: 100rpx;
    /*background-color: red;*/
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.arrow {
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.date-picker {
    color: #818181;
}

.divider-box {
    padding: 0rpx 20rpx 20rpx 20rpx;
    height: 40rpx;
}

.divider {
    width: 100%;
    height: 100%;
}


.calender {
    /*height: 500rpx;*/
    padding: 0rpx 20rpx 20rpx 20rpx;
    display: flex;
    flex-direction: column;
}

.calender-header {
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.calender-header .week-item {
    width: 96rpx;
    height: 80rpx;
}

.calender-body {
    /*height: 300rpx;*/
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}

.calender-body .date-item {
    width: 96rpx;
    height: 80rpx;
    margin-top: 6rpx;
    padding-top: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.date-item .circle {
    width: 10rpx;
    height: 10rpx;
    margin-top: 10rpx;
}

.date-today-0 {
    background-color: #FDFDFD;
}

.date-today-1 {
    background-color: #29DDB9;
    color: #FFFFFF !important;
}

.date-enabled-0 {
    color: #CCCCCC;
}

.date-enabled-1 {
    color: #797979;
}

.date-selected {
    color: #FFFFFF;
}

/*笔记*/
.diary {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin-top: 20rpx;
}

.diary-item {
    display: flex;
    flex-direction: row;
    height: 150rpx;
    width: 100%;
    padding: 10rpx 0rpx;
    margin-bottom: 10rpx;
    align-items: center;
    background-color: #FBFBFB;
}

.diary-item .diary-date {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 120rpx;

}

.diary-item .diary-date .date {
    font-size: 90rpx;
}

.diary-item .diary-date .day {
    font-size: 30rpx;
    margin-top: -20rpx;
}

.diary-item .emoji {
    height: 120rpx;
    width: 120rpx;
}

.diary-item .emoji .emoji-image {
    height: 100%;
    width: 100%;
}

.diary-item .text {
    width: 330rpx;
    height: 41rpx;
    color: #9B9B9B;
    display: flex;
    flex-direction: row;
    justify-content: center;
    overflow: hidden;
}

.virtical-divider {
    width: 50rpx;
    height: 100%;
}

.more-arrow {
    width: 30rpx;
    height: 100%;
    align-self: flex-end;
}

